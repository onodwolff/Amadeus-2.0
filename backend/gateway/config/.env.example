# Base environment configuration
ENV=dev

# Engine configuration
ENGINE__DEFAULT_MODE=backtest
ENGINE__MAX_NODES=4
ENGINE__BOOTSTRAP_TIMEOUT_SECONDS=30
ENGINE__LOG_LEVEL=INFO

# Data providers
DATA__PROVIDER=mock
DATA__CACHE_TTL_SECONDS=60
DATA__CACHE_BACKEND=memory

# Risk management
RISK__ENABLED=false
RISK__MAX_DAILY_LOSS=0
RISK__HALT_ON_BREACH=true

# Authentication
AUTH__ENABLED=false
AUTH__JWT_SECRET=change-me
AUTH__ACCESS_TOKEN_TTL_SECONDS=900
AUTH__REFRESH_TOKEN_TTL_SECONDS=86400

# Storage
STORAGE__DATABASE_URL=sqlite+aiosqlite:///./gateway.db
STORAGE__SNAPSHOT_DIR=
